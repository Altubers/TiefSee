<Window x:Class="WPF_關聯副檔名.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_關聯副檔名"
        mc:Ignorable="d"
        Title="TiefSee 關聯副檔名"
        Height="421.867"
        Width="735.402"
        Background="#FF2D2D30">

    <Grid ScrollViewer.VerticalScrollBarVisibility="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto">


            <StackPanel Margin="10">
                <TextBox Text="關聯副檔名"
                         VerticalAlignment="Top"
                         BorderBrush="{x:Null}"
                         FontSize="28"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Background="{x:Null}"
                         Foreground="White"
                         BorderThickness="0" />

                <TextBox Text="將 TiefSee 關聯到右邊「副檔名清單」的檔案類型，並讓 win10 能夠將 TiefSee 設為預設的圖片檢視器。"
                         VerticalAlignment="Top"
                         BorderBrush="{x:Null}"
                         FontSize="18"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Background="{x:Null}"
                         Foreground="#7FFFFFFF"
                         Margin="0,5,0,0"
                         BorderThickness="0" />
                <Button Style="{DynamicResource but_一般}"
                        Content="套用關聯"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="Button_Click_AssociateFilenameExtension"
                        FontSize="18"
                        Padding="5"
                        Margin="0,5,0,0" />
                <TextBox Text="解除副檔名關聯"
                         VerticalAlignment="Top"
                         BorderBrush="{x:Null}"
                         FontSize="28"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Foreground="White"
                         Background="{x:Null}"
                         Margin="0,70,0,0"
                         BorderThickness="0" />
                <TextBox Text="如果您打算刪除 TiefSee ，請點此按鈕解除 TiefSee 與圖片的關聯。"
                         VerticalAlignment="Top"
                         BorderBrush="{x:Null}"
                         FontSize="18"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Foreground="#7FFFFFFF"
                         Background="{x:Null}"
                         Margin="0,5,0,0"
                         BorderThickness="0" />
                <Button Style="{DynamicResource but_一般}"
                        Content="解除關聯"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="Button_Click_DisassociateFilenameExtansion"
                        FontSize="18"
                        Padding="5"
                        Margin="0,5,0,0" />

            </StackPanel>
        </ScrollViewer>
        <DockPanel Grid.Column="1"
                   Margin="10">
            <TextBox Text="副檔名清單"
                     VerticalAlignment="Top"
                     BorderBrush="{x:Null}"
                     FontSize="28"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     Background="{x:Null}"
                     Foreground="White"
                     DockPanel.Dock="Top"
                     BorderThickness="0" />
            <TextBox Text="一行代表一種副檔名"
                     VerticalAlignment="Top"
                     BorderBrush="{x:Null}"
                     FontSize="18"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     Background="{x:Null}"
                     Foreground="#7FFFFFFF"
                     DockPanel.Dock="Top"
                     BorderThickness="0" />
            <TextBox x:Name="t_副檔名"
                     Text="JPG&#xA;JPEG&#xA;JFIF&#xA;PNG&#xA;GIP&#xA;BMP&#xA;ICO&#xA;TIF&#xA;TIFF&#xA;SVG&#xA;MPO&#xA;CRW&#xA;NEF&#xA;PPM&#xA;TGA&#xA;PCX&#xA;PGM&#xA;PBM&#xA;PSB&#xA;PSD&#xA;WEBP&#xA;JPF&#xA;HEIC&#xA;EMF&#xA;WMF"
                     BorderBrush="{x:Null}"
                     FontSize="18"
                     TextWrapping="Wrap"
                     Foreground="White"
                     Background="#FF1E1E1E"
                     Padding="5"
                     Margin="0,5,0,0"
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True" />
        </DockPanel>
        <Rectangle Fill="Gray"
                   HorizontalAlignment="Left"
                   Width="1"
                   Grid.Column="1" />


    </Grid>
</Window>
